<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.restaurantmanagement.Controllers.KitchenJobController">
    <Label layoutX="470.0" layoutY="14.0" text="На выдачу"/>
    <Label layoutX="125.0" layoutY="14.0" text="Заказы в очереди"/>
    <TableView fx:id="ready_tabe" layoutX="479.0" layoutY="36.0" prefHeight="230.0" prefWidth="79.0">
        <columns>
            <TableColumn fx:id="ready_number_column" minWidth="5.60003662109375" prefWidth="66.40008544921875"
                         text="№"/>
        </columns>
    </TableView>
    <TableView fx:id="cooking_table" layoutX="26.0" layoutY="45.0" prefHeight="274.0" prefWidth="378.0">
        <columns>
            <TableColumn fx:id="cooking_number_column" prefWidth="34.40002250671387" text="№"/>
