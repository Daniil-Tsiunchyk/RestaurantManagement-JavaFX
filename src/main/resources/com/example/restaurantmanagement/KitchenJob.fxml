    <Button layoutX="288.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleUpdateOrderStatus"
            text="Обновить статус">
        <cursor>
            <Cursor fx:constant="OPEN_HAND"/>
        </cursor>
    </Button>
    <Button layoutX="160.0" layoutY="340.0" mnemonicParsing="false" onAction="#handeGetInfo" text="Информация">
        <cursor>
            <Cursor fx:constant="OPEN_HAND"/>
        </cursor>
    </Button>
    <Button layoutX="26.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleStartCooking" text="Начать готовку">
        <cursor>
            <Cursor fx:constant="OPEN_HAND"/>
        </cursor>
    </Button>
    <Button layoutX="493.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleLogout" text="Выйти">
        <cursor>
            <Cursor fx:constant="OPEN_HAND"/>
        </cursor>
    </Button>
</AnchorPane>
